                    borderRadius: 4,
                    barPercentage: 0.6
                }]
            }, { ...chartDefaultOptions,
                plugins: {
                    ...chartDefaultOptions.plugins,
                    legend: { display: false }
                },
                scales: {
                    ...chartDefaultOptions.scales,
                    y: { ...chartDefaultOptions.scales.y, title: { display: true, text: 'Change in FEV‚ÇÅ (% Predicted)', font: { family: 'Inter' } } }
                }
            });

            createOrUpdateChart('exacerbationsChart', 'doughnut', {
                labels: ['Reduction', 'Remaining Rate'],
                datasets: [{
                    data: [63, 37],
                    backgroundColor: [brilliantBlues.primary, brilliantBlues.placebo],
